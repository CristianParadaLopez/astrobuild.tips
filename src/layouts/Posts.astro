---
// Recibimos los datos desde la prop 'frontmatter'
const { frontmatter } = Astro.props;
const { title, pubDate, image, tags } = frontmatter;

import '../styles/global.css';
---

<section>
  <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 md:items-center md:gap-8">
      <div>
        <div class="max-w-prose md:max-w-none">
          <h2 class="text-2xl font-semibold text-gray-900 sm:text-3xl">
            {title}
          </h2>
          <span class="flex flex-col sm:gap-y-2 md:flex-row md:items-center md:gap-y-0 md:divide-x">
            <time class="pr-2">
               {pubDate.toLocaleDateString()}
            </time>
            <div class="flex gap-1 ml-2">
              {tags.map((tag: string) => (
                <span class="whitespace-nowrap rounded-full bg-purple-100 px-2.5 py-0.5 text-xs text-purple-600">
                  {tag}
                </span>
              ))}
            </div>
          </span>
          <p class="mt-4 text-pretty text-gray-700">
            <slot /> 
          </p>
          
        </div>
      </div>

      <div>
        <img src={image} class="rounded" alt={title}>
      </div>
    </div>
  </div>
</section>